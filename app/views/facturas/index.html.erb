<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Idfacturas</th>
      <th>Numfactura</th>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Valor</th>
      <th>Comentariofactura</th>
      <th>Idestadofactura</th>
      <th>Eliminado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.IdFacturas %></td>
        <td><%= factura.NumFactura %></td>
        <td><%= factura.Fecha %></td>
        <td><%= factura.Concepto %></td>
        <td><%= factura.Valor %></td>
        <td><%= factura.ComentarioFactura %></td>
        <td><%= factura.IdEstadoFactura %></td>
        <td><%= factura.eliminado %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

